@{
    Layout = "../Shared/AdminLayout/_Layout";
    ViewData["Title"] = "Send Order";
}

@model HalloDocMVC.DBEntity.ViewModels.AdminPanel.SendOrderModel

<div class="d-flex justify-content-center bg-light">
    <div class="d-flex flex-column my-2 col-lg-8 col-md-10">
        <div class="d-flex justify-content-between px-2">
            <div>
                <strong class="fs-4">
                    Send Order
                </strong>
            </div>
            <div>
                <a asp-controller="Dashboard" asp-action="Index" class="btn border border-info shadow-none">
                    <strong class="text-info">
                        <i class="fa fa-chevron-left" aria-hidden="true"></i> Back
                    </strong>
                </a>
            </div>
        </div>
        <div class="shadow bg-white rounded m-2 p-3">
            <form method="post" asp-controller="Actions" asp-action="SendOrders">
                <input type="hidden" asp-for="RequestId" value="@Model.RequestId"/>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <select name="ProfessionType" class="form-select form-control shadow-none" id="ProfessionType" required 
                            asp-items="@(new SelectList(ViewBag.ProfessionType, "HealthProfessionId", "ProfessionName"))" onchange="GetProfession()">
                                <option>All Profession</option>
                            </select>
                            <label for="ProfessionType">Select Profession</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <select asp-for="VendorId" class="form-select form-control shadow-none" id="Business" required onchange="GetData()">
                                <option>Options</option>
                            </select>
                            <label for="VendorId">Business</label>
                            <span asp-validation-for="VendorId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="BusinessContact" type="text" class="form-control shadow-none" id="BusinessContact" placeholder="Enter Business Contact">
                            <label for="BusinessContact">Business Contact</label>
                            <span asp-validation-for="BusinessContact" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Email" type="email" class="form-control shadow-none" id="Email" placeholder="Enter Email">
                            <label for="Email">Email</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="FaxNumber" type="tel" class="form-control shadow-none" id="FaxNumber" placeholder="Enter Fax Number">
                            <label for="FaxNumber">Fax Number</label>
                            <span asp-validation-for="FaxNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-floating mb-3">
                            <textarea asp-for="Prescription" class="form-control shadow-none" placeholder="Leave a comment here" id="Prescription" style="height: 100px"></textarea>
                            <label for="Prescription">Prescription on order details</label>
                            <span asp-validation-for="Prescription" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="NoOfRefill" type="text" class="form-control shadow-none" id="NoOfRefill" placeholder="Enter Number of Refill" />
                            <label for="Profession">Number of Refill</label>
                            <span asp-validation-for="NoOfRefill" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-info text-white mx-2">Submit</button>
                    <a asp-controller="Dashboard" asp-action="Index" class="btn border border-info text-info shadow-none">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>