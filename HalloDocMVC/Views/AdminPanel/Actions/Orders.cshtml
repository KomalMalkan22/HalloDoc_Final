@{
    Layout = "../Shared/AdminLayout/_Layout";
}
<div class="d-flex justify-content-center bg-light">
    <div class="d-flex flex-column my-2 col-lg-8 col-md-10">
        <div class="d-flex justify-content-between px-2">
            <div>
                <strong class="fs-4">
                    Send Order
                </strong>
            </div>
            <div>
                <a asp-controller="Dashboard" asp-action="Index" class="btn border border-info shadow-none">
                    <strong class="text-info">
                        <i class="fa fa-chevron-left" aria-hidden="true"></i> Back
                    </strong>
                </a>
            </div>
        </div>
        <div class="shadow bg-white rounded m-2 p-3">
            <form asp-controller="" asp-action="">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <select name="region" class="form-select form-control shadow-none" id="Profession">
                                <option>All Profession</option>
                            </select>
                            <label for="Profession">Select Profession</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control shadow-none" id="Business" placeholder="Enter Business">
                            <label for="Business">Business</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control shadow-none" id="BusinessContact" placeholder="Enter Business Contact">
                            <label for="BusinessContact">Business Contact</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input type="email" class="form-control shadow-none" id="Email" placeholder="Enter Email">
                            <label for="Email">Email</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input type="tel" class="form-control shadow-none" id="FaxNumber" placeholder="Enter Fax Number">
                            <label for="FaxNumber">Fax Number</label>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-floating mb-3">
                            <textarea class="form-control shadow-none" placeholder="Leave a comment here" id="Prescription" style="height: 100px"></textarea>
                            <label for="Prescription">Prescription on order details</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <select name="region" class="form-select form-control shadow-none" id="Profession">
                                <option>Not Required</option>
                            </select>
                            <label for="Profession">Number of Refill</label>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-info text-white mx-2">Submit</button>
                    <button type="button" class="btn border border-info text-info">Cancel</button>
                </div>
            </form>
        </div>
    </div>

</div>
