@using static HalloDocMVC.DBEntity.ViewModels.AdminPanel.Constant;
@{
    Layout = "../Shared/AdminLayout/_Layout";
    ViewData["Title"] = "My Profile";
}

@{
    var enumData = from AdminStatus e in Enum.GetValues(typeof(AdminStatus))
                   select new
                   {
                       ID = (int)e,
                       Name = e.ToString()
                   };
}

@model HalloDocMVC.DBEntity.ViewModels.AdminPanel.AdminProfile

<div class="d-flex justify-content-center">
    <div class="d-flex flex-column my-2 col-lg-8 col-md-10">
        <div class="d-flex justify-content-between px-2 mb-2">
            <div>
                <strong class="fs-4">
                    My Profile
                </strong>
            </div>
            <div>
                <a asp-controller="Dashboard" asp-action="Index" class="btn border border-info shadow-none">
                    <strong class="text-info">
                        <i class="fa fa-chevron-left" aria-hidden="true"></i> Back
                    </strong>
                </a>
            </div>
        </div>
        <div class="shadow bg-white rounded m-2 p-2">
            <!--Account Information-->
            <form method="post" asp-controller="MyProfile" asp-action="ResetPassword">
                <div class="row mx-2 mb-2">
                    <strong class="fs-5 my-3">Account Information</strong>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="UserName" type="text" class="form-control shadow-none" id="UserName" placeholder="User Name" autocomplete="off" disabled>
                            <label for="UserName">User Name</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Password" type="password" class="form-control shadow-none" id="Password" placeholder="Enter Password" autocomplete="off">
                            <label for="Password">Password</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <select asp-for="Status" class="form-select form-control shadow-none" id="Status" asp-items="@(new SelectList(enumData, "ID", "Name"))" disabled>
                                <option>Active</option>
                            </select>
                            <label for="Status">Status</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <select asp-for="RoleId" class="form-select form-control shadow-none" id="Role" asp-items="@(new SelectList(ViewBag.ComboBoxUserRole, "RoleId", "RoleName"))" disabled>
                                <option>Master Admin</option>
                            </select>
                            <label for="Role">Role</label>
                        </div>
                    </div>
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn border border-info text-info shadow-none">Reset Password</button>
                    </div>
                </div>
            </form>
            <!--End Account Information-->

            <!--Administrator Information-->
            <form id="AdministratorInfoForm" method="post" asp-controller="MyProfile" asp-action="EditAdministratorInfo">
                <input type="hidden" asp-for="AdminId" id="AdminId"/>
                <div class="row mx-2 mb-2">
                    <strong class="fs-5 my-3">Administrator Information</strong>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="FirstName" type="text" class="form-control shadow-none input" id="FirstName" placeholder="Enter First Name" autocomplete="off">
                            <label for="FirstName">First Name</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="LastName" type="text" class="form-control shadow-none input" id="LastName" placeholder="Enter Last Name" autocomplete="off">
                            <label for="LastName">Last Name</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Email" type="email" id="email" class="form-control shadow-none input" placeholder="name@example.com" autocomplete="off">
                            <label for="email">Email</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="ConfirmEmail" type="email" id="ConfirmEmail" class="form-control shadow-none input" placeholder="name@example.com" autocomplete="off">
                            <label for="ConfirmEmail">Confirm Email</label>
                        </div>
                    </div>
                    <div class="col-md-6 phone">
                        <div class="form-floating mb-3 h-100">
                            <input asp-for="PhoneNumber" type="tel" class="form-control shadow-none input" id="phone" autocomplete="off">
                        </div>
                    </div>
                    <input asp-for="RegionsId" type="hidden" id="regionids" />
                    <div class="col-md-6 d-flex pb-3">
                        @foreach (var cb in ViewBag.RegionComboBox)
                        {
                            @if (Model != null && Model.RegionIds.Count > 0 && Model.RegionIds.Exists(id => id.RegionId == cb.RegionId))
                            {
                                <div class="form-check mx-2">
                                    <input class="form-check-input" value="@cb.RegionId" type="checkbox" name="Region" checked>
                                    <label class="form-check-label" for="flexCheckDefault">
                                        @cb.RegionName
                                    </label>
                                </div>
                            }
                            else
                            {
                                <div class="form-check mx-2">
                                    <input class="form-check-input" value="@cb.RegionId" type="checkbox" name="Region">
                                    <label class="form-check-label" for="flexCheckDefault">
                                        @cb.RegionName
                                    </label>
                                </div>
                            }
                        }
                    </div>
                    <div class="d-flex justify-content-end">
                        <input type="button" value="Save" id="save" class="btn btn-info text-white" />
                        <button class="btn btn-info text-white" id="edit" onclick="toggleFormElements()">Edit</button>
                    </div>
                </div>
            </form>
            <!--End Administrator Information-->

            <!--Mailing & Billing Information-->
            <form id="BillingInfoForm" method="post" asp-controller="MyProfile" asp-action="EditBillingInfo">
                <input type="hidden" asp-for="AdminId" id="AdminId1"/>
                <div class="row mx-2 mb-2">
                    <strong class="fs-5 my-3">Mailing & Billing Information</strong>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Address1" type="text" class="form-control shadow-none input1" id="Address1" placeholder="Enter Address 1" autocomplete="off">
                            <label for="Address1">Address 1</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Address2" type="text" class="form-control shadow-none input1" id="Address2" placeholder="Enter Address 2" autocomplete="off">
                            <label for="Address2">Address 2</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="City" type="text" class="form-control shadow-none input1" id="City" placeholder="Enter City" autocomplete="off">
                            <label for="City">City</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="State" type="text" class="form-control shadow-none input1" id="State" placeholder="Enter State" autocomplete="off">
                            <label for="State">State</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="ZipCode" type="text" class="form-control shadow-none input1" id="ZipCode" placeholder="Enter Zip Code" autocomplete="off">
                            <label for="ZipCode">Zip Code</label>
                        </div>
                    </div>
                    <div class="col-md-6 phone">
                        <div class="form-floating mb-3 h-100">
                            <input asp-for="AltPhoneNumber" type="tel" class="form-control shadow-none input1" id="phone1" autocomplete="off">
                        </div>
                    </div>
                    <div class="d-flex justify-content-end">
                        <input type="button" value="Save" id="save1" class="btn btn-info text-white" />
                        <button type="button" class="btn btn-info text-white" id="edit1" onclick="toggleFormElements1()">Edit</button>
                    </div>
                </div>
            </form>
            <!--End Mailing & Billing Information-->

        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/intl-tel-input@19.2.16/build/js/intlTelInput.min.js"></script>

<script>
    const phoneInputField = document.querySelector("#phone");
    const phoneInput = window.intlTelInput(phoneInputField, {
        utilsScript:
            "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js",
    });

    const phoneInputField1 = document.querySelector("#phone1");
    const phoneInput1 = window.intlTelInput(phoneInputField1, {
        utilsScript:
            "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js",
    });
</script>

<script>
    window.onload = function (e) {
        toggleFormElements('true')
        toggleFormElements1('true')
        $(".form-check-input").prop("disabled", true);
    }
    function toggleFormElements(bDisabled) {
        var inputs = document.getElementsByClassName("input");
        var submit = document.getElementById("save");
        var editprofile = document.getElementById("edit");
        for (var i = 0; i < inputs.length; i++) {
            inputs[i].disabled = !inputs[i].disabled;
        }
        $(".form-check-input").prop("disabled", false);
        if (inputs[0].disabled) {
            submit.style.display = "none";
            editprofile.style.display = "block";
        } else {
            submit.style.display = "block";
            editprofile.style.display = "none";
        }
    }
    function toggleFormElements1(bDisabled) {
        console.log("Edit");
        var inputs1 = document.getElementsByClassName("input1");
        var submit1 = document.getElementById("save1");
        var editprofile1 = document.getElementById("edit1");
        for (var i = 0; i < inputs1.length; i++) {
            inputs1[i].disabled = !inputs1[i].disabled;
        }
        if (inputs1[0].disabled) {
            submit1.style.display = "none";
            editprofile1.style.display = "block";
        } else {
            submit1.style.display = "block";
            editprofile1.style.display = "none";
        }
    }

    $(function () {
        $('#save').on('click', function () {
            let checkboxes = document.querySelectorAll('input[name="Region"]:checked');
            let regionIds = [];
            checkboxes.forEach((checkbox) => {
                regionIds.push(checkbox.value);
            });
            document.querySelector('#regionids').value = regionIds.join(',');
            Swal.fire({
                title: "Do you want to Edit Information ?",
                showDenyButton: false,
                showCancelButton: true,
                confirmButtonText: "Yes",
                denyButtonText: `Don't save`
            }).then((result) => {
                if (result.isConfirmed) {
                    $('#AdministratorInfoForm').submit();
                }
            });
        });
    });

    $(function () {
        $('#save1').on('click', function () {
            console.log('hii');
            Swal.fire({
                title: "Do you want to Edit Information ?",
                showDenyButton: false,
                showCancelButton: true,
                confirmButtonText: "Yes",
                denyButtonText: `Don't save`
            }).then((result) => {
                if (result.isConfirmed) {
                    $('#BillingInfoForm').submit();
                }
            });
        });
    });
</script>
